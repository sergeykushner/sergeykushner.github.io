{
    "workbench.colorTheme": "Visual Studio Dark",
    "editor.formatOnSave": true,
    "files.autoSave": "afterDelay",
    // Автофикс stylelint при сохранении только для css и scss
    "[css]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.stylelint": "explicit"
        },
        "editor.formatOnSave": true
    },
    "[scss]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.stylelint": "explicit"
        },
        "editor.formatOnSave": true
    },
    // Поддержка stylelint
    "stylelint.validate": [
        "css",
        "scss"
    ]
}